{
  // These tasks will run in order when initializing your CodeSandbox project.
  "setupTasks": [
    {
      "name": "Install Dependencies",
      "command": "yarn install"
    },
    {
      "name": "Building Workspace",
      "command": "yarn build"
    }
  ],

  // These tasks can be run from CodeSandbox. Running one will open a log in the app.
  "tasks": {
    "lint": {
      "name": "Lint",
      "command": "yarn lint",
      "runAtStart": false
    },
    "format": {
      "name": "Format",
      "command": "yarn format",
      "runAtStart": false
    },
    "test": {
      "name": "Test",
      "command": "yarn test",
      "runAtStart": false
    },
    "build": {
      "name": "Build",
      "command": "yarn build",
      "runAtStart": false
    },
    "build:client": {
      "name": "Build: client",
      "command": "yarn workspace @codesandbox/sandpack-client build"
    },
    "build:themes": {
      "name": "Build: themes",
      "command": "yarn workspace @codesandbox/sandpack-themes build"
    },
    "build:react": {
      "name": "Build: react",
      "command": "yarn workspace @codesandbox/sandpack-react build"
    },
    "dev:website-docs": {
      "name": "Website docs",
      "command": "yarn dev:docs",
      "runAtStart": false
    },
    "dev:sandpack-react": {
      "name": "Storybook",
      "command": "yarn dev:react",
      "runAtStart": true
    },
    "dev:website-landing": {
      "name": "Website landing",
      "command": "yarn dev:landing",
      "runAtStart": false
    },
    "dev:website-theme": {
      "name": "Website theme",
      "command": "yarn dev:theme",
      "runAtStart": false
    }
  }
}