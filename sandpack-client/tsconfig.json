{
  "compilerOptions": {
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "typeRoots": ["node_modules/@types"],
    "outDir": "dist/types",
    "skipLibCheck": true
  },
  "include": ["./src"],
  "exclude": ["node_modules", "src/**/*.test.ts"]
}
